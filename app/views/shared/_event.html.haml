= "Yes: " + event.yes_users.count.to_s
= " No: " + event.no_users.count.to_s
= " Maybe: " + event.maybe_users.count.to_s
%br
= "RSVP:"
- if current_user.vote_events.include?(event)
  = current_user_event_type(event)
- elsif event.user == current_user
  = "The event is generated by you"
- else
  %span
    %a{:class => "yes_event", :type => "Yes"}
      = "Yes"
    %a{:class => "no_event", :type => "No"}
      = "No"
    %a{:class => "maybe_event", :type => "Maybe"}
      = "Maybe"
    %hr